{
  "name": "Node.js & PostgreSQL Development",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",

  "mounts": [
    "source=${env:HOME}/.aws,target=/root/.aws,type=bind",
    "source=${localWorkspaceFolder}/../ampdresume-theme,target=/workspace/ampdresume-theme,type=bind",
    "source=${localWorkspaceFolder}/../openresume-theme,target=/workspace/openresume-theme,type=bind"
  ],

  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "graphql.vscode-graphql-syntax",
        "GraphQL.vscode-graphql",
        "ms-azuretools.vscode-docker",
        "mtxr.sqltools",
        "mtxr.sqltools-driver-pg",
        "Prisma.prisma",
        "bradlc.vscode-tailwindcss",
        "github.copilot",
        "github.copilot-chat",
        "amatiasq.sort-imports",
        "HashiCorp.terraform",
        "ms-azuretools.vscode-azureterraform",
        "matheusq94.TFS",
        "AmazonWebServices.aws-toolkit-vscode"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
      }
    }
  },

  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/terraform:1": {
      "version": "latest",
      "tflint": "latest",
      "installTFsec": true
    },
    "ghcr.io/devcontainers/features/aws-cli:1": {
      "version": "latest"
    }
  },

  "forwardPorts": [3000, 5432],

  "postCreateCommand": "npm i && npm run prisma:generate"
}
